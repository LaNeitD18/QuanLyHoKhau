<Page x:Class="QuanLyHoKhau.View.QuanLyHoKhauPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyHoKhau.View"
      mc:Ignorable="d"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TrangChu"
      DataContext="{StaticResource QuanLyHoKhauVM}">

    <Grid x:Name="trangChu" Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid
            Grid.ColumnSpan="22" Grid.RowSpan="10">
            <materialDesign:Card Padding="5" Margin="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <TextBox 
                            Width="250"
                            MinWidth="100"
                            FontSize="18" 
                            materialDesign:HintAssist.Hint="Mã chủ hộ" 
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center"
                            Text="{Binding UsingExamID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                    <Grid Grid.Row="1">
                        <TextBox 
                            Width="250"
                            MinWidth="100"
                            FontSize="18" 
                            materialDesign:HintAssist.Hint="Số CMND" 
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center"
                            Text="{Binding UsingExamID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                    <Grid Grid.Row="2">
                        <TextBox 
                            Width="250"
                            MinWidth="100"
                            FontSize="18" 
                            materialDesign:HintAssist.Hint="Họ tên" 
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center"
                            Text="{Binding UsingExamID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                    <Grid Grid.Row="3">
                        <DatePicker
                            Width="250"
                            MinWidth="100"
                            FontSize="18"
                            materialDesign:HintAssist.Hint="Ngày sinh"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                            SelectedDate="{Binding StartDate}"
                            IsEnabled="{Binding IsEnabledElements}"/>
                    </Grid>
                    <Grid Grid.Row="4">
                        <ComboBox 
                            FontSize="18" Width="250" MinWidth="100"
                            materialDesign:HintAssist.Hint="Chọn giới tính" 
                            VerticalAlignment="Center" 
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                            ItemsSource="{Binding ListClass}" 
                            KeyboardNavigation.TabIndex="1" 
                            SelectedItem="{Binding SelectedClass, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }"
                            IsEnabled="{Binding IsEnabledElements}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding Class_SelectionChangedCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding ClassID}"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <TextBox 
                            Width="250"
                            MinWidth="100"
                            FontSize="18" 
                            materialDesign:HintAssist.Hint="Nơi sinh" 
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center"
                            Text="{Binding UsingExamID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <TextBox 
                            Width="250"
                            MinWidth="100"
                            FontSize="18" 
                            materialDesign:HintAssist.Hint="Quê quán" 
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center"
                            Text="{Binding UsingExamID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="1">
                        <TextBox 
                            Width="250"
                            MinWidth="100"
                            FontSize="18" 
                            materialDesign:HintAssist.Hint="Dân tộc" 
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center"
                            Text="{Binding UsingExamID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="1">
                        <TextBox 
                            Width="250"
                            MinWidth="100"
                            FontSize="18" 
                            materialDesign:HintAssist.Hint="Tôn giáo" 
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center"
                            Text="{Binding UsingExamID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                    <Grid Grid.Row="4" Grid.Column="1">
                        <TextBox 
                            Width="250"
                            MinWidth="100"
                            FontSize="18" 
                            materialDesign:HintAssist.Hint="Nghề nghiệp" 
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center"
                            Text="{Binding UsingExamID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Grid>
        <Grid
            Grid.Column="23"
            Grid.ColumnSpan="8" Grid.RowSpan="10">
            <materialDesign:Card x:Name="cardInfo" Padding="10" Margin="0,5,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <TextBox 
                            Width="300"
                            MinWidth="200"
                            FontSize="18" 
                            materialDesign:HintAssist.Hint="Mã sổ hộ khẩu" 
                            IsEnabled="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center"
                            Text="{Binding UsingExamID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                    <Grid Grid.Row="1">
                        <DatePicker
                            Width="300"
                            MinWidth="200"
                            FontSize="18"
                            materialDesign:HintAssist.Hint="Ngày tạo sổ"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                            SelectedDate="{Binding StartDate}"
                            IsEnabled="{Binding IsEnabledElements}"/>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Grid>
        <Grid
            Grid.Row="11"
            Grid.ColumnSpan="31" Grid.RowSpan="6">
            <materialDesign:Card Margin="5,0,5,0">
                <DataGrid 
                x:Name="listUsingExamDatagrid"
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Top" 
                ItemsSource="{Binding ListUsingExam}"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectionMode="Extended"
                AutoGenerateColumns="False"
                SelectedItem="{Binding SelectedUsingExam, Mode=TwoWay}"
                SelectionUnit="FullRow" 
                CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding StatusString}"/>
                        <DataGridTextColumn Header="Phòng" Binding="{Binding RoomID}"/>
                        <DataGridTextColumn Header="Lớp" Binding="{Binding EXAM.CLASS.ClassName}"/>
                        <DataGridTextColumn Header="Giám thị" Binding="{Binding EXAM.LECTURER.LecturerName}"/>
                    </DataGrid.Columns>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction 
                            Command="{Binding UsingExam_SelectionChangedCommand}"                       
                            CommandParameter="{Binding ElementName=listUsingExamDatagrid}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </DataGrid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Page>
